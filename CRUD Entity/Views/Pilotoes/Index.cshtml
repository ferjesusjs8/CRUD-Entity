@model IEnumerable<CRUD_Entity.Models.Piloto>
@{
    ViewBag.Title = "Index";
}
<h2>Registro de Pilotos</h2>
<p>
    @Html.ActionLink("Registrar novo piloto", "Create")
</p>
@using (Html.BeginForm())
{
    <p>
        Procurar: @Html.TextBox("SearchString")
        <input type="submit" value="Pesquisar" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("ID", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>

        <th>
            @Html.ActionLink("Nome", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>

        <th>
            @Html.ActionLink("RG", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>

        <th>
            @Html.ActionLink("CPF", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>

        <th>
            @Html.ActionLink("Data de Nascimento", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>

        <th>
            @Html.ActionLink("Número da Licença", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>

        <th>
            @Html.ActionLink("Ativo?", "Index", new { sortOrder = ViewBag.NameSortParm })
        </th>

        <th></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdPiloto)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.RG)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CPFCNPJ)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.DataNascimento)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.NumeroLicenca)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>

        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.IdPiloto }) |
            @Html.ActionLink("Detalhes", "Details", new { id = item.IdPiloto }) |
            @Html.ActionLink("Excluir", "Delete", new { id = item.IdPiloto })
        </td>
    </tr>
    }
</table>
